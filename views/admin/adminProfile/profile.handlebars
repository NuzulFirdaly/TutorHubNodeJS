<div class="container" style="width: 85%; padding-top: 50px; margin-top: 50px; padding-left: 50px;">
    <br><br>
    <div class="bg-white shadow rounded overflow-hidden">
        <div class="px-4 pt-0 pb-4 cover">
            <div class="media align-items-end profile-head" style="padding-top: 20px;">
                <div class="profile mr-3"><img src="/admin/images/adminProfilePictures/{{user.Profile_pic}}" alt="..."
                        width="130" class="rounded mb-2 img-thumbnail"><a href="/admin/editprofile"
                        class="btn btn-outline-dark btn-sm btn-block">Edit profile</a></div>
                <div class="media-body mb-auto text-white">
                    <h3 class="mt-0 mb-0">{{user.FirstName}} {{user.LastName}}</h3>
                    <h4 class="mt-0 mb-0 text-secondary">{{user.Username}}</h4>
                </div>
            </div>
        </div>

        <div class="px-4 py-3">
            <h4 class="mb-0" style="padding-bottom: 10px;">About</h4>
            <div class="p-4 rounded shadow-sm bg-light">
                <h4 class="mt-0 mb-0" style="padding-top: 10px;">Role : {{user.AccountTypeID}}</h4>
                <h4 class="mt-0 mb-0" style="padding-top: 10px;">Language : {{user.adminlist.Language}}</h4>
                <h4 class="mt-0 mb-0" style="padding-top: 10px;">Region : {{user.adminlist.Region}}</h4>
                <h4 class="mt-0 mb-0" style="padding-top: 10px;">Description : {{user.adminlist.Description}}</h4>
            </div>
        </div>

        <div class="px-4 py-3">
            <h4 class="mb-0" style="padding-bottom: 10px;">Contact</h4>
            <div class="p-4 rounded shadow-sm bg-light">
                <h4 class="mt-0 mb-0">Email : {{user.Email}}</h4>
                <h4 class="mt-0 mb-0" style="padding-top: 10px;">Phone Number : {{user.adminlist.PhoneNumber}}</h4>
            </div>
        </div>

        <div class="px-4 py-3" id="admincertdiv">
            <h4 class="mb-0" style="padding-bottom: 10px;">Certificate</h4>
            <div class="p-4 rounded shadow-sm bg-light">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="featured-carousel owl-carousel">
                                {{#each user.admincertificates}}
                                <div class="item">
                                    <div class="work">
                                        <div class="img d-flex align-items-center justify-content-center rounded"
                                            style="background-image: url(/admin/images/adminCertificates/{{Certificate}});">
                                            <a href="#" class="icon d-flex align-items-center justify-content-center">
                                                <span class="ion-ios-search"></span>
                                            </a>
                                        </div>
                                        <div class="text pt-3 w-100 text-center">
                                            <h3><a href="#">Work 01</a></h3>
                                            <span>Web Design</span>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br><br><br><br>
</div>