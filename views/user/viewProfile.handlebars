                {{else}}
                The user has not written a description of themself.
                {{/if}}
            </div>
        </div>
        <div class="py-4 px-4">
            {{#if coursesarray}}
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h5 class="mb-0">My Courses</h5>
            </div>
            <div class="slider-items-owl owl-carousel owl-theme" style="margin-left:2em;">
                {{#each coursesarray }}
                <div class="item-slide">
                    <figure class="card card-product-grid" style="width: 18rem;">
                        <img class="card-img-top" src="/images/coursethumbnails/{{Course_thumbnail}}" height="140"
                            width="240">
                        <div class="widget-header">
                            <a href="#" class="ml-3 icontext" data-toggle="dropdown" data-offset="20,10">
                                <div class="icon">
                                    <div class="text">
                                        <small class="text-muted">{{userobject.FirstName}}
                                            {{userobject.LastName}}</small> <br>
                                    </div>
                            </a>
                        </div>
                        <figcaption class="info-wrap">
                            <h4 class="title" style="font-size:1.3em; height:58px"><a
                                    href="/course/updatecourse/{{course_id}}">{{Title}}</a></h4>
                            <p class="text-muted" style="font-size:0.9em; height:58px">{{Short_description}}
                            </p>
