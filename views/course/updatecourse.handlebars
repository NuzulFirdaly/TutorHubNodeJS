<section class="section-content padding-y">
    <div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="border">
            {{#with course}}
                <a href="/course/editcourse/{{course_id}}" class="btn btn-primary float-right">Edit</a>
                <h1>{{Title}}</h1>
                <br>
                <div class="widget-header">
                        <a href="#" class="ml-3 icontext" data-toggle="dropdown" data-offset="20,10">
                            <div class="icon"><img class="icon icon-md rounded-circle border" src="/images/profilepictures/{{user.Profile_pic}}"></div>
                            <div class="text">
                                <p style="font-size:2em;">{{user.FirstName}} {{user.LastName}}</p> <br>
                            </div>
                        </a>
                </div>
                <br> <br>
                <img src="/images/coursethumbnails/{{Course_thumbnail}}" class="img-fluid" alt="Responsive image">
                <br> <br>
                <h3>Course Description</h3>
                <br>
                <p>{{Description}}</p>
                <br>
            </div>
            <br>
            <div class="border">
                <a href="/course/editlesson/{{course_id}}" class="btn btn-primary float-right">Edit</a>
                <h3>Course Syllabus</h3>
                {{#each Lessons }}
                <br> <br>
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-center text-muted">SESSION</p>
                        <h4 class="text-center">{{session_no}}</h4>
                    </div>
                    <div class="col">
                        <i class="icon mr-2 fas fa-stopwatch">Approx. {{time_approx}} hours</i>
                        <h4>{{session_title}}</h4>
                        <p>{{session_description}}</p>
                    </div>
                </div>
                {{/each}}
            </div>

        </div>
        <div class="col-md-6">
            <button type="button" class="float-right btn btn-md btn-warning" data-toggle="modal" data-target="#myModal_{{course_id}}">
                    Delete
                </button>
            <form action="/course/deletecourse/{{course_id}}" method="POST">
                <div class="modal fade" id="myModal_{{course_id}}">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h4 class="modal-title">Delete Confirmation</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <div class="modal-body">
                        Are you sure you want to delete this course?
                        </div>

                        <div class="modal-footer">
                        <input type="submit" value="Delete" class="btn btn-danger">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                        </div>

                    </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    {{/with}}
    </div>
</section>