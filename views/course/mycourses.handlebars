<script type="text/javascript">
/// some script

// jquery ready start
$(document).ready(function() {
	// jQuery code


    /////////////////  items slider. /plugins/owlslider/
    if ($('.slider-items-owl').length > 0) { // check if element exists
        $('.slider-items-owl').owlCarousel({
        //change the loop daddy
            loop:false,
            margin:15,
            nav:true,
            autoWidth:true,
            navText: ["<i class='fa fa-chevron-left'></i>", "<i class='fa fa-chevron-right'></i>"],
            responsive:{
                0:{
                    items:1
                },
                640:{
                    items:3
                },
                1024:{
                    items: 3
                }
            }
        })
    } // end if




});
// jquery end
</script>
<div class="container padding-y ">
    <!-- tutor profile -->
    <div class="row">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-header">
                    <div class="icon"><img class="icon icon-lg rounded-circle" src="/images/profilepictures/{{userobject.Profile_pic}}"></div>
                    <div class="text"><h3>{{userobject.FirstName}} {{userobject.LastName}}</h3></div>
                </div>
                <div class="card-body">
                    <div class="text">
                        <h5>Description</h5>
                        <p class="text-muted">{{userobject.Description}}</p>
                    </div>
                    <br>
                </div>
            </div>
        </div> <!-- end of col-->
        <div class="col-md-9 ">
            <h4>My Courses</h4>
                <!-- ============== COMPONENT SLIDER ITEMS OWL  ============= -->
                <div class="slider-items-owl owl-carousel owl-theme" style="margin-left:2em;">
                    {{#each coursesarray }}
                    <div class="item-slide">
                        <figure class="card card-product-grid" style="width: 18rem;">
                            <img class="card-img-top" src="/images/coursethumbnails/{{Course_thumbnail}}"height="140" width="240">
                            <div class="widget-header">
                                    <a href="#" class="ml-3 icontext" data-toggle="dropdown" data-offset="20,10">
                                        <div class="icon"><img class="icon icon-xs rounded-circle" src="/images/profilepictures/{{../userobject.Profile_pic}}"></div>
                                        <div class="text" >
                                            <small class="text-muted">{{userobject.FirstName}} {{userobject.LastName}}</small> <br>
                                        </div>
                                    </a>
                            </div>
                            <figcaption class="info-wrap">
                                <h4 class="title" style="font-size:1.3em; height:58px"><a href="/course/updatecourse/{{course_id}}">{{Title}}</a></h4>
                                <p class="text-muted" style="font-size:0.9em; height:58px">{{Short_description}}</p>
                                <br>
                                <h5>${{Hourlyrate}}/Hour</h5>
                            </figcaption>
                        </figure> <!-- card // -->
                    </div>
                    {{/each}}
                </div>
                <!-- ============== COMPONENT SLIDER ITEMS OWL .end // ============= -->
                <br><br>
        </div><!-- end of col -->
    </div>
    <div class=""></div>
</div>