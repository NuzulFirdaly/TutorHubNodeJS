<div class="container padding-y">
  <h1>My Schedule</h1>
  <p id="tutor_id"class="text-muted">{{tutor_id}}</p>
</div>

<div class="todo-grid-parent container padding-y">
    <div>
        <h3>Change Availability</h3>
      <div class="todo-input todo-block">
        {{!-- make all day in month avaialble or not, do it todo.js and by using moment --}}
        <span>Select all remaining dates in the current month as <strong>available</strong></span>
        <button class="relative center-x btn rounded-pill btn-success" id="allmonth">Fill</button>
        <span>Select all remaining dates in the current month as <strong>unavailable</strong></span>
        <button class="relative center-x btn rounded-pill btn-danger" id="unselectallmonth">Unfill</button>
        <span>Date:</span>
        <input type="date" id="dateInput" min="2021-02-14">

        <div style="">
          <span>Start Time:</span>
          {{!-- use jquerytimepicker --}}
          <select name="startTimeInput" id="startTimeInput">
          </select>
        </div>
        <div>
          <span> End Time:</span>
           <select name="endTimeInput" id="endTimeInput">
          </select>
        </div>
        <div style="grid-column: 1 / span 2;">
          <button class="relative center-x btn rounded-pill btn-primary" id="addBtn">Make Available</button>

        </div>
        <div>
          <span class="relative center-x">This will change according to whether the user selects all dates as available or not</span>

        </div>
      </div>
      <br>
      <br>
      <div id="todotablediv">
      <table id="todoTable" class="todo-block">
          <tr>
            <td>Date</td>
            <td>Start Time</td>
            <td>End Time</td>

            <td>Category</td>
            <td></td>
            <td></td>
          </tr>
      </table>
      </div>
      <br>
      <br>
    </div>

    <div class="todo-calendar  todo-block">
      <div id='calendar'></div>
    </div>

  </div> <!-- class="todo-grid-parent" -->

  <div class="todo-overlay" id="todo-overlay">
    <div class="todo-modal" id="todo-modal">
      <div class="todo-input todo-block">
        <span><h2>Change Availability</h2></span> <span></span>
        <span>Category: </span>
        <input type="text" placeholder="Enter category" list="categoryList"  id="todo-edit-category">
        <datalist id="categoryList">
          <option value="Personal"></option>
          <option value="Work"></option>
        </datalist>
        <!-- Rounded switch -->
        {{!-- <div style="grid-column: 1 / span 2;">
          <div style=" width: 50%;margin: 0 auto;">
            <h4 class="relative center-x" style="text-align: center;" id='toggleswitchlabel'>Make Available
            </h4>
            <label class="relative center-x switch">
              <input type="checkbox" id="toggleswitch">
              <span class="slider round"></span>
            </div>          
        </label>
        </div> --}}

        <span>Date:</span>
        <input type="date" id="todo-edit-date" readonly disabled>
        <span>Start Time:</span>
        {{!-- <input type="time" id="todo-edit-starttime"> --}}
        <select name="todo-edit-starttime" id="todo-edit-starttime">
        </select>
        <span>End Time:</span>
        {{!-- <input type="time" id="todo-edit-endtime"> --}}
        <select name="todo-edit-endtime" id="todo-edit-endtime"disabled> 
        </select>
        <div>
          <button style="width:50%; margin:0 auto;"class="relative center-x btn rounded-pill btn-danger" id="unavailableBtn">Unavailable</button>
        </div>
        <div>
            <button style="width:50%; margin:0 auto;"class="relative center-x btn rounded-pill btn-success" id="availableBtn">Available</button>
        </div>

        {{!-- <div style="grid-column: 1 / span 2;">
          <button class="relative center-x btn rounded-pill btn-primary" id="changeBtn">Save Change</button>
        </div> --}}
      </div>
    </div>
    <div class="todo-modal-close-btn" id="todo-modal-close-btn">X</div>
  </div>

