<div class="container padding-y">
  <h1>Book Available Slot</h1>
  <p id="tutor_id"class="text-muted" style="display: none;">{{tutor_id}}</p>
  <p id="course_id"class="text-muted" style="display:none">{{course_id}}</p>

</div>

<div class="todo-grid-parent container padding-y">
    <div>
      <!-- Session -->        
        <h3>1. Select Session</h3>
        <div class="todo-input todo-block">
          <div>
              <p>Booking Session For:</p>
          </div>
          <select name="selectedSession" id="selectedSession"></select>
          <p>Description:</p>
        <div>
              <p id="sessionDescription">This is description blah b lha bl jhas ljhd sa</p>
          </div>
          <p>Time Approximate: </p>
          <h4 id="sessionApproximateHours"></h4>
        </div>
        <br>
        <button  onclick="goBack()" class="btn rounded-pill btn-warning"> <i class="far fa-arrow-alt-circle-left"></i> Back To Course Page </button>
    </div>
    <div class="todo-calendar  todo-block">
        <h3>2. Select Date &amp; Time</h3>

      <div id='calendar'></div>

    </div>

  </div> <!-- class="todo-grid-parent" -->

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Select Date &amp; Time</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form method="POST" action="/myschedule/book/{{tutor_id}}/{{course_id}}" id="bookForm">
        <div class="modal-body todo-input">
            <span>Category: </span>
              <input type="text" placeholder="Enter category" list="categoryList"  id="todo-edit-category">
              <datalist id="categoryList">
                <option value="Personal"></option>
                <option value="Work"></option>
              </datalist>
                {{!-- <div style="grid-column: 1 / span 2;">
